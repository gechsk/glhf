procedure TForm1.N1Click(Sender: TObject);
var f: TextFile;
FName,s1,s2,s3,s4,s5,s6 : string;
begin
if opendialog2.Execute then
begin
FName:= OpenDialog2.FileName;
AssignFile (f,FName);

Reset (f);
 readln(f,s1); //считываем
 readln(f,s2);
 readln(f,s3);
 readln(f,s4);
 readln(f,s5);
 readln(f,s6);
 X1.Text:= s1; //заполняем
 X2.Text:= s2;
 X3.Text:= s3;
 Y1.Text:= s4;
 Y2.Text:= s5;
 Y3.Text:= s6;



CloseFile(f);
end;

end;



procedure TForm1.Save1Click(Sender: TObject);
var f: TextFile;
FName,s1,s2,s3,s4,s5,s6 : string;
begin
if SaveDialog1.Execute then
FName:= SaveDialog1.FileName;
AssignFile(f,Fname);
Rewrite(f);
 s1:=X1.Text; //Считываем
 s2:=X2.Text;
 s3:=X3.Text;
 s4:=Y1.Text;
 s5:=Y2.Text;
 s6:=Y3.Text;
 Writeln(f,s1);
 Writeln(f,s2);
 Writeln(f,s3);
 Writeln(f,s4);
 Writeln(f,s5);
 Writeln(f,s6);
 CloseFile(f);



end;

procedure TForm1.Savereport1Click(Sender: TObject);
begin
S.Lines.SaveToFile( 'ReportFile.txt');
end;

procedure TForm1.СalculateClick(Sender: TObject);
var ax,ay,bx,by,cx,cy,Per,PR,Pl,AB,AC,BC:real;
begin
ax:= StrToFloat(X1.Text);
ay:= StrToFloat(Y1.Text);
bx:= StrToFloat(X2.Text);
by:= StrToFloat(Y2.Text);
cx:= StrToFloat(X3.Text);
cy:= StrToFloat(Y3.Text);
AB:=sqrt(sqr(ax-bx)+sqr(ay-by));
AC:=sqrt(sqr(cx-ax)+sqr(cy-ay));
BC:=sqrt(sqr(cx-bx)+sqr(cy-by));
PR:=AB+AC+BC;
Per:=PR/2;
PL:=sqrt(Per*(Per-AB)*(Per-AC)*(Per-BC));
P.Text:=FloatToStr(PR);
S.Text:=FloatToStr(PL);
end;

end.
