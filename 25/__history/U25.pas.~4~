unit U25;

interface
uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Imaging.pngimage,
  Vcl.ExtCtrls, Vcl.Menus;
   Procedure OpenFile;
   procedure SaveFile;
   Procedure SaveReport;

implementation
uses unit1;
Procedure OpenFile;
  var f: TextFile;
FName,s1,s2,s3,s4,s5,s6 : string;
begin
if Form1.opendialog2.Execute then
begin
FName:= Form1.OpenDialog2.FileName;
AssignFile (f,FName);

Reset (f);
 readln(f,s1); //считываем
 readln(f,s2);
 readln(f,s3);
 readln(f,s4);
 readln(f,s5);
 readln(f,s6);
 Form1.X1.lines[0]:= s1; //заполн€ем
 Form1.X2.lines[0]:= s2;
 Form1.X3.lines[0]:= s3;
 Form1.Y1.lines[0]:= s4;
 Form1.Y2.lines[0]:= s5;
 Form1.Y3.lines[0]:= s6;



CloseFile(f);
end;

end;

Procedure SaveFile;
  var f: TextFile;
FName,s1,s2,s3,s4,s5,s6 : string;
begin
if Form1.SaveDialog1.Execute then
FName:= Form1.SaveDialog1.FileName;
AssignFile(f,Fname);
Rewrite(f);
 s1:=Form1.X1.lines[0]; //—читываем
 s2:=Form1.X2.lines[0];
 s3:=Form1.X3.lines[0];
 s4:=Form1.Y1.lines[0];
 s5:=Form1.Y2.lines[0];
 s6:=Form1.Y3.lines[0];
 Writeln(f,s1);
 Writeln(f,s2);
 Writeln(f,s3);
 Writeln(f,s4);
 Writeln(f,s5);
 Writeln(f,s6);
 CloseFile(f);
end;
Procedure SaveReport;
begin
Form1.S.Lines.SaveToFile( 'ReportFile.txt');
end;


end.
